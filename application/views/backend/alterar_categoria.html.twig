{% extends 'base/backend/base.html.twig' %}

{% block title %}
	{{ page_title }} - {{ title }}
{% endblock %}

{% block navbar %}
	{{ include('backend/navbar.html.twig') }}
{% endblock %}

{% block content %}
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Administrar {{ page_subtitle }}</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					Alterar nova {{ page_subtitle }}
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							{% if errors %}
							<div class="alert alert-danger">{{ errors | striptags }}</div>
							{% endif %}
							{{ include('backend/form_editar_categoria.html.twig') }}
						</div>

					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>

		<!-- /.col-lg-6 -->
	</div>
	<!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}


