{% extends 'base/backend/base.html.twig' %}

{% block title %}
	{{ page_title }} - {{ title }}
{% endblock %}

{% block navbar %}
	{{ include('backend/navbar.html.twig') }}
{% endblock %}

{% block content %}
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Administrar {{ page_subtitle }}</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					Adicionar nova {{ page_subtitle }}
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							{% if errors %}
							<div class="alert alert-danger">{{ errors | striptags }}</div>
							{% endif %}
							{{ include('backend/form_categoria.html.twig') }}
						</div>

					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-6 -->
		<div class="col-lg-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					Alterar {{ page_subtitle }}
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<table class="table table-striped">
								<thead>
									<tr>
										<td>Nome da Categoria</td>
										<td>Alterar</td>
										<td>Excluir</td>
									</tr>
								</thead>
								<tbody>

								{% for categoria in categorias %}
								<tr>
									<td>{{ categoria.titulo }}</td>
									<td><a href="{{ base_url('admin/categoria/alterar/') ~ categoria.id_categoria }}"><i class="fa fa-refresh fa-fw"></i> Alterar</a> </td>
									<td><a href="{{ base_url('admin/categoria/excluir/') ~ categoria.id_categoria }}"><i class="fa fa-remove fa-fw"></i> Excluir</a></td>
								</tr>
								{%  endfor %}

								</tbody>
							</table>
						</div>
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-6 -->
	</div>
	<!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}


