<form role="form" action="{{ base_url('admin/categoria/editar') }}" method="post">
	{% for categoria in categorias %}
	<div class="form-group">
		<label id="txt-categoria">Nome da categoria</label>
		<input type="text" id="txt-categoria" name="txt-categoria" class="form-control"
			   placeholder="Digite o nome da categoria" value="{{ categoria.categoria }}">
		<input type="hidden" name="id_categoria" value="{{ categoria.id_categoria }}">
	</div>
	{%  endfor %}
	<button type="submit" class="btn btn-default">Editar</button>

</form>
